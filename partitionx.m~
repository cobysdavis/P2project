function [ sum1, sum2, balance, diff ] = partitionx( intensity, matrixDim )

sum1=11;
sum2=0;
index=matrixDim/2;
while abs(sum1-sum2)>1
sum1=0;
sum2=0;

for i=1:index
    for j=1:matrixDim
        if intensity(i,j)>0
            sum1=sum1+intensity(i,j);
        end
    end
end

 for i=index+1:matrixDim
    for j=1:matrixDim
        if intensity(i,j)>0
            sum2=sum2+intensity(i,j);
        end
    end
 end
 

 
if(sum1>sum2)
    index=index-1;
    
else
    index=index+1;
   
end

index


end

diff=abs(sum1-sum2);
balance=index;
return
 
end

